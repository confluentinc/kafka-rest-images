Configuration:
  name: "Log4j2"

  Appenders:
    Console:
      name: STDOUT
      target: SYSTEM_OUT
      PatternLayout:
        Pattern: "[%d] %p %m (%c)%n"

  Loggers:
    Root:
      level: {{ getEnv "KAFKA_REST_LOG4J_ROOT_LOGLEVEL" "INFO" }}
      AppenderRef:
        - ref: STDOUT

    Logger:
    {{- if getEnv "KAFKA_REST_LOG4J_LOGGERS" "" }}
    {{- $loggers := getEnv "KAFKA_REST_LOG4J_LOGGERS" "" -}}
    {{- range $logger, $loglevel := splitToMapDefaults ","  "" $loggers}}
      - name: "{{ $logger }}"
        level: "{{ $loglevel }}"
        AppenderRef:
          ref: STDOUT
    {% endif %}